{
  "prettier.bracketSameLine": true,
  "prettier.bracketSpacing": false,
  "prettier.semi": true, // statement 마지막에 세미콜론을 찍음
  "prettier.printWidth": 120, // 선호되는 한 줄의 길이
  "prettier.endOfLine": "auto", // 파일의 마지막에는 EOL을 보장
  "prettier.singleQuote": false, // 홑따옴표가 아닌 쌍따옴표를 사용
  "prettier.useTabs": false, // 탭을 사용하지 않고 스페이스를 사용
  "prettier.tabWidth": 2, // 탭을 할 경우 2 스페이스
  "prettier.trailingComma": "all", // 여러줄로 나뉘었을 때는 쉼표를 사용
  "prettier.arrowParens": "always" // 화살표 함수에서 괄호 사용 의무화
}
